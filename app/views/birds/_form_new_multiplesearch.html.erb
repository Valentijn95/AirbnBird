<div data-controller="categories" class="mt-4">
<%= simple_form_for bird do |f| %>
    <!-- The input field that will be updated -->
    <%= f.input :title %>
    <%= f.input :description, as: :text, input_html: { cols: 5, rows: 10 } %>
    <%= f.input :price, as: :integer %>
    <%= f.input :categories, label: "Selected Categories", disabled: true, input_html: { data: { categories_target: "input"}, id: "category-input" } %>

    <div class="row">
      <div class="col-8">
        <%= f.input :categories, collection: @categories, prompt: "Pick a category", label: false, input_html: { data: { categories_target: "selector" } } %>
      </div>
      <div class="col-3">
        <button data-action="click->categories#addCategory:prevent" class="btn btn-primary" >Add</button>
      </div>

    </div>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
</div>
