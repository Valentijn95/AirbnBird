<h1 class="fw-bold display-4">Edit Bird Information</h1>

<%= simple_form_for @bird, html: { class: "bird-form" } do |f| %>
  <%= f.input :title, label: "Bird Title", input_html: { class: "form-control" } %>
  <%= f.input :description, as: :text, input_html: { cols: 5, rows: 6, class: "form-control" }, label: "Description" %>
  <%= f.input :price, input_html: { class: "form-control" } %>
  <%= f.input :categories, collection: ["Exotic birds", "Large birds", "Birds for Therapy", "Birds for Breeding", "Messenger Birds"], prompt: "Pick a category", input_html: { class: "form-control" } %>

  <div class="form-actions text-center mt-3">
    <%= f.submit "Update Bird", class: "btn btn-primary" %>
    <%= link_to 'Cancel', bird_path(@bird), class: 'btn btn-secondary ml-2' %>
  </div>
<% end %>
