<!-- app/views/birds/show.html.erb -->
<div class="container text-center">
  <h1 class="fw-bold display-4"><%= @bird.title.titleize %></h1>

  <h2></h2>

  <p><strong>Description:</strong> <%= @bird.description %></p>
  <p><strong>Price:</strong> <%= number_to_currency(@bird.price) %></p>
  <p><strong>Categories:</strong> <%= @bird.categories %></p>

  <% if @bird.user == current_user %>
    <div class="alert alert-warning">
      You cannot book your own bird.
    </div>
  <% else %>
    
    <div class="row justify-content-center p-4 my-3">
      <div class="col-6"><%= render 'bookings/booking_new', booking: @booking, bird: @bird %></div>
    </div>
  <% end %>

</div>
