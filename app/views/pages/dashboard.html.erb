
<div class="row">
<div class="col-6"></div>
  <div class="col-6">
    <div class="d-flex flex-row flex-wrap">

      <% @birds.each do |bird| %>
        <div class="card flex-column col-3 b-1 m-2 p-4">
          <h5><%= link_to bird.title, bird_path(bird.id) %></h5>
          <img src="<%= bird.title %>" alt="bird" height=200px>
          <p><%= bird.description %></p>
          <p>$ <%= bird.price %></p>
          <p>Categories: <%= bird.categories %></p>
        </div>
      <% end %>


    </div>
  </div>

</div>
