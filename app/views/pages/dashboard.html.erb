</div>
<div class="col-1"></div>
<div class="col-7 pt-4">
  <div class="row">
    <div class="col-9"><h2 class="mb-4">Your birds</h2></div>
    <div class="col-3"><%= link_to "Add bird + ", new_bird_path, class: "btn-dashboard btn btn-update"%></div>
  </div>

    <div class="row justify-content-between">
      <% if @birds.empty? %>
        <div class="message">
          <p>You have no birds for rental yet</p>
        </div>
      <% else %>
        <% @birds.each do |bird| %>
          <div class="card flex-column col-5 b-1 m-2 p-4">

            <h5><%= link_to bird.title, bird_path(bird.id), class: "bird-card-title" %></h5>
            <%= image_tag "bird_example.jpg", class: "dashboard-bird-image" %>

            <p>$ <%= bird.price %></p>
            <p>Categories: <%= bird.categories %></p>
            <br>

            <!-- Add the Update Button here -->
            <%= link_to "Update", edit_bird_path(bird), class: "btn btn-update mt-2" %>

            <!-- Optional: Delete Button -->
            <%= button_to "Delete", bird_path(bird.id), data: { turbo_confirm: "Are you sure you want to delete #{bird.title}?" }, method: :delete, class: "btn btn-cancel mt-2" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
